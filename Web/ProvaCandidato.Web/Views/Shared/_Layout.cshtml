<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - Prova Candidado(a) ASP.NET MVC</title>

    <link href="https://fonts.googleapis.com/css2?family=Material+Icons" rel="stylesheet" />

    @Styles.Render("~/bundles/css")

    <link href="~/Content/geral.css" rel="stylesheet" />

    @Scripts.Render("~/bundles/modernizr")

    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>

    @RenderSection("head", required: false)

    <style type="text/css">
        div#alerts {
            bottom: 0;
            width: 100%;
            position: absolute;
            display: flex;
            justify-content: center;
            z-index: 10000;
            font-style: italic;
        }

            div#alerts .alert {
                display: flex;
                align-items: center;
            }
    </style>
</head>

<body>
    <div id="alerts"></div>

    <div class="container body-content">
        <h1 class="title mb-3">@(ProvaCandidato.Utils.Environment.WebEnvironment.NomeEmpresa)</h1>

        <nav class="navbar navbar-expand-lg navbar-light bg-menu">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="~/Assets/Images/logo.gif" alt="" width="30" height="24">
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" href="@Url.Action("Index", "Home")">Instruções</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Cliente")">Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Cidade")">Cidades</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container page-data">
            @RenderBody()
        </div>

        <footer class="bg-footer">
            <div class="linha">@DateTime.Now.Year &copy; - @(ProvaCandidato.Utils.Environment.WebEnvironment.NomeEmpresa)</div>
        </footer>
    </div>

    <script type="text/javascript">
        const Alert = $("#alerts");
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
