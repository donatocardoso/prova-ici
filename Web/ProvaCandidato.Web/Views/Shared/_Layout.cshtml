<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - Prova Candidado(a) ASP.NET MVC</title>

    <link href="https://fonts.googleapis.com/css2?family=Material+Icons" rel="stylesheet" />

    @Styles.Render("~/bundles/css")

    <link href="~/Content/geral.css" rel="stylesheet" />

    @Scripts.Render("~/bundles/modernizr")

    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>

    @RenderSection("head", required: false)

    <style type="text/css">
        div#alerts {
            bottom: 0;
            width: 100%;
            position: absolute;
            display: flex;
            justify-content: center;
            z-index: 10000;
            font-style: italic;
        }

            div#alerts .alert {
                display: flex;
                align-items: center;
            }
    </style>
</head>

<body>
    <div id="alerts"></div>

    <div class="container body-content">
        <h1 class="title">@ViewBag.NomeEmpresa</h1>

        <div class="navbar navbar-inverse">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>

                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Instruções", "Index", "Home")</li>
                        <li>@Html.ActionLink("Cliente", "Index", "Clientes")</li>
                        <li>@Html.ActionLink("Cidade", "Index", "Cidades")</li>
                    </ul>
                </div>
            </div>
        </div>

        <div id="conteudo">
            @RenderBody()
        </div>

        <footer>
            <div class="linha">2017 &copy; - @ViewBag.NomeEmpresa</div>
        </footer>
    </div>

    <script type="text/javascript">
        const Alert = $("#alerts");
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>